generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int    @id() @default(autoincrement())
  name   String
  user   String
  pass   String
  status String @default("use")
}

model Product {
  id             Int              @id() @default(autoincrement())
  name           String
  cost           Int
  price          Int
  img            String
  status         String           @default("use")
  BillSaleDetail BillSaleDetail[]
}

model BillSale {
  id               Int              @id() @default(autoincrement())
  customer         String
  customer_phone   String
  customer_address String
  payDate          DateTime
  payTime          String
  status           String           @default("wait") //wait,pay,send
  BillSaleDetail   BillSaleDetail[]
}

model BillSaleDetail {
  id          Int      @id() @default(autoincrement())
  product_Id  Int
  BillSale_Id Int
  Product     Product  @relation(fields: [product_Id], references: [id]) //เชื่อมความสัมพันธ์กับตาราง Product one to many
  BillSale    BillSale @relation(fields: [BillSale_Id], references: [id]) //เชื่อมความสัมพันธ์กับตาราง BillSale one to many
  cost        Int
  price       Int
}
